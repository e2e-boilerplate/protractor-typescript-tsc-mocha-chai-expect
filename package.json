{
  "name": "protractor-typescript-tsc-mocha-chai",
  "version": "1.0.0",
  "description": "Protractor end-to-end test automation boilerplate, using TypeScript, tsc, Mocha, and Chai",
  "scripts": {
    "pretty": "npx prettier --no-config './spec/*.ts' --write",
    "lint": "npx tslint -c tslint.json './spec/*.ts'",
    "clean": "npx rimraf ./build/*",
    "upadte-webderiver": "npx webdriver-manager update --standalone false --gecko",
    "upadte-webderiver-ci": "npx webdriver-manager update --versions.chrome=79.0.3945.36",
    "build": "npx tsc",
    "test": "npx protractor ./build/protractor.conf.js"
  },
  "keywords": [
    "protractor",
    "es6",
    "typescript",
    "jasmine",
    "boilerplate",
    "example",
    "expect",
    "e2e",
    "e2e test"
  ],
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.2.9",
    "@types/jasmine": "3.5.6",
    "@types/jasminewd2": "2.0.8",
    "@types/mocha": "7.0.1",
    "@types/node": "12.12.28",
    "chai": "4.2.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "mocha": "7.0.1",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "protractor": "5.4.3",
    "rimraf": "3.0.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
