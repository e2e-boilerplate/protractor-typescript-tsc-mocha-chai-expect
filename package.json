{
  "name": "protractor-typescript-tsc-jasmine-expect",
  "version": "1.0.0",
  "description": "Protractor end-to-end test automation boilerplate, using TypeScript, tsc, Jasmine, and Expect",
  "scripts": {
    "pretty": "npx prettier --no-config './spec/*.ts' --write",
    "lint": "npx tslint -c tslint.json './spec/*.ts'",
    "clean": "npx rimraf ./build/*",
    "upadte-webderiver": "npx webdriver-manager update --standalone false --gecko",
    "build": "npx tsc",
    "test": "npx protractor ./build/protractor.conf.js",
    "test-ci": "npx protractor ./build/protractor-ci.conf.js "
  },
  "keywords": [
    "protractor",
    "es6 modules",
    "typescript",
    "jasmine",
    "boilerplate",
    "example",
    "expect"
  ],
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "3.5.1",
    "@types/jasminewd2": "2.0.8",
    "@types/node": "12.12.25",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "protractor": "5.4.2",
    "puppeteer": "2.0.0",
    "rimraf": "3.0.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
